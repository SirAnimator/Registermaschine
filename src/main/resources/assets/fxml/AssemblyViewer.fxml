<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:id="appContainer"
      stylesheets="@../css/style.css"
      fx:controller="dk.tij.registermaschine.RegisterDisplayController"
      spacing="0">

    <!-- Header Section -->
    <HBox id="header-section" style="-fx-background-color: #242424; -fx-padding: 10px;">
        <Label text="Registers" style="-fx-font-size: 18px; -fx-text-fill: #e0e0e0;" />
        <Button text="Run Code" fx:id="runCodeButton" id="runCodeButton"
                style="-fx-padding: 10px 20px; -fx-background-color: #007bff; -fx-text-fill: #ffffff; -fx-border-radius: 5px;" />
    </HBox>

    <!-- Main Content Area -->
    <VBox id="main-content" style="-fx-background-color: #242424; -fx-padding: 20px; -fx-spacing: 10px;">
        <TableView fx:id="registersTable" id="registersTable"
                   style="-fx-background-color: #1e1e1e; -fx-text-fill: #e0e0e0; -fx-border-color: #333;">
            <columns>
                <TableColumn text="Register" style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;" />
                <TableColumn text="Value" style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;" />
            </columns>
        </TableView>
    </VBox>

    <!-- Console Section -->
    <HBox id="console" style="-fx-background-color: #1e1e1e; -fx-padding: 10px; -fx-align-items: center; -fx-spacing: 10px;">
        <TextArea fx:id="consoleInput" id="consoleInput" promptText="Enter command..."
                  style="-fx-background-color: #242424; -fx-text-fill: #e0e0e0; -fx-border-color: #333; -fx-padding: 10px; -fx-border-radius: 5px;"/>
        <Button text="Send" fx:id="sendCommandButton" id="sendCommandButton"
                style="-fx-padding: 10px 20px; -fx-background-color: #28a745; -fx-text-fill: #ffffff; -fx-border-radius: 5px;"/>
    </HBox>

</VBox>
